@model VMSApp.ViewModels.OrganizationViewModel

@{
    ViewBag.Title = "Dashboard";
    ViewBag.UserType = 1;
}

@{
    if (Model.Status == 1)
    {
    <h2>Your Organization is under review. You can access your dashboard once verification is completed. Thanks!!</h2>
    }
    else
    {
    <div class="row mb-0">
        <div class="col-lg-12 col-md-6 mb-md-0 mb-4">
            <div class="card">
                <div class="nav-wrapper position-relative end-0">
                    <ul class="nav nav-pills nav-fill p-1" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link mb-0 px-0 py-1 active" data-bs-toggle="tab" href="#activity" role="tab" aria-controls="activity" aria-selected="true">
                                <span class="material-icons align-middle mb-1">diversity_1</span>

                                Activities
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mb-0 px-0 py-1" data-bs-toggle="tab" href="#job" role="tab" aria-controls="job" aria-selected="false">
                                <span class="fas fa-tasks align-middle mb-1"></span>
                                Jobs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mb-0 px-0 py-1" data-bs-toggle="tab" href="#shift" role="tab" aria-controls="shift" aria-selected="false">
                                <span class="far fa-clock opacity-10 align-middle mb-1"></span>
                                Shifts
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">

                        <div class="tab-pane fade show active " id="activity" role="tabpanel" aria-labelledby="activity">

                            <button class="btn btn-icon btn-3 btn-primary m-3" type="button">
                                <span class="btn-inner--icon"><i class="material-icons">add</i></span>
                                <span class="btn-inner--text">New</span>
                            </button>
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Description</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Begin On</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ends On</th>
                                            <th class="text-secondary opacity-7"></th>
                                            <th class="text-secondary opacity-7"></th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Activities)
                                        {
                                            <tr>
                                                <td>
                                                    <p class="text-xs font-weight-bold mb-0 ps-3">@item.Name</p>

                                                </td>
                                                <td class="align-middle">

                                                    <p class="text-xs font-weight-bold mb-0">@item.Description</p>

                                                </td>
                                                <td class="align-middle text-center">

                                                    <p class="text-xs font-weight-bold mb-0">@item.StartDateTime.ToString("dd MMM yyyy")</p>

                                                </td>
                                                <td class="align-middle text-center">

                                                    <p class="text-xs font-weight-bold mb-0">@item.EndDateTime.ToString("dd MMM yyyy")</p>

                                                </td>
                                                <td class="align-middle">

                                                    <a href="javascript:;" class="text-secondary font-weight-bold text-sm" data-toggle="tooltip" data-original-title="Edit user">
                                                        <i class="material-icons text-sm">edit</i>
                                                        Edit
                                                    </a>

                                                </td>
                                                <td class="align-middle">
                                                    <a href="javascript:;" class="text-danger font-weight-bold text-sm" data-toggle="tooltip" data-original-title="Edit user">
                                                        <i class="material-icons text-sm">delete</i>
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="job" role="tabpanel" aria-labelledby="job">


                            <button class="btn btn-icon btn-3 btn-primary m-3" type="button">
                                <span class="btn-inner--icon"><i class="material-icons">add</i></span>
                                <span class="btn-inner--text">New</span>
                            </button>
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Activity Name</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Job Name</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Job Description</th>
                                            <th class="text-secondary opacity-7"></th>
                                            <th class="text-secondary opacity-7"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var act in Model.Activities)
                                        {
                                            foreach (var job in act.Jobs)
                                            {
                                            <tr>
                                                <td>
                                                    <p class="text-xs font-weight-bold mb-0 ps-3">@act.Name</p>

                                                </td>
                                                <td class="align-middle">

                                                    <p class="text-xs font-weight-bold mb-0">@job.Name</p>

                                                </td>
                                                <td class="align-middle text-center">

                                                    <p class="text-xs font-weight-bold mb-0">@job.Description</p>

                                                </td>

                                                <td class="align-middle">

                                                    <a href="javascript:;" class="text-secondary font-weight-bold text-sm" data-toggle="tooltip" data-original-title="Edit user">
                                                        <i class="material-icons text-sm">edit</i>
                                                        Edit
                                                    </a>

                                                </td>
                                                <td class="align-middle">
                                                    <a href="javascript:;" class="text-danger font-weight-bold text-sm" data-toggle="tooltip" data-original-title="Edit user">
                                                        <i class="material-icons text-sm">delete</i>
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>


                        </div>
                        <div class="tab-pane fade" id="shift" role="tabpanel" aria-labelledby="shift">

                            <button class="btn btn-icon btn-3 btn-primary m-3" type="button">
                                <span class="btn-inner--icon"><i class="material-icons">add</i></span>
                                <span class="btn-inner--text">New</span>
                            </button>
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Activity Name</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Job Name</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Shift Name</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Shift Description</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Starts On</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ends On</th>
                                            <th class="text-secondary opacity-7"></th>
                                            <th class="text-secondary opacity-7"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var act in Model.Activities)
                                        {
                                            foreach (var job in act.Jobs)
                                            {
                                                foreach (var shift in job.Shifts)
                                                {
                                            <tr>
                                                <td>
                                                    <p class="text-xs font-weight-bold mb-0 ps-3">@act.Name</p>

                                                </td>
                                                <td class="align-middle">

                                                    <p class="text-xs font-weight-bold mb-0">@job.Name</p>

                                                </td>
                                                <td class="align-middle">

                                                    <p class="text-xs font-weight-bold mb-0">@shift.Name</p>

                                                </td>
                                                <td class="align-middle">

                                                    <p class="text-xs font-weight-bold mb-0">@shift.Description</p>

                                                </td>
                                                <td class="align-middle">

                                                    <p class="text-xs font-weight-bold mb-0">@shift.StartDateTime.ToString("dd MMM yyyy")</p>

                                                </td>
                                                <td class="align-middle">

                                                    <p class="text-xs font-weight-bold mb-0">@shift.StopDateTime.ToString("dd MMM yyyy")</p>

                                                </td>
                                                <td class="align-middle">

                                                    <a href="javascript:;" class="text-secondary font-weight-bold text-sm" data-toggle="tooltip" data-original-title="Edit user">
                                                        <i class="material-icons text-sm">edit</i>
                                                        Edit
                                                    </a>

                                                </td>
                                                <td class="align-middle">
                                                    <a href="javascript:;" class="text-danger font-weight-bold text-sm" data-toggle="tooltip" data-original-title="Edit user">
                                                        <i class="material-icons text-sm">delete</i>
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    }
}

